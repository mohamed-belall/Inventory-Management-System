@model List<StartAlert>

<div class="dropdown">
    <a class="nav-link " href="#" id="notificationDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

        <i class="bi bi-bell-fill" style="font-size:22px; color:white;"></i>
        <span class="badge badge-danger" 
              style="top: -11px;
                     right: 12px;
                     position: relative;"
        >
            @Model.Count()
        </span>
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="notificationDropdown">
        @if (Model.Any())
        {
            foreach (var alert in Model)
            {
                <a class="dropdown-item" href="#">
                    <strong>Product:</strong> @alert.product!.Name <br />
                    <strong>Alert Date:</strong> @alert.AlertDate.ToShortDateString() <br />
                </a>
                <div class="dropdown-divider"></div>
            }
        }
        else
        {
            <p class="dropdown-item">No pending alerts</p>
        }
    </div>
</div>
