<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management System</title>
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">

    <!-- Add this to the <head> section of your _Layout.cshtml -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <!-- Header -->
    <header class="header">
        <div class="logo-header">
            <i class="fas fa-bars" id="menu-toggle"></i>
            <span class="logo-text">Trainee Management System</span>
        </div>
        <div class="profile">
            <img src="/img/unknownperson.png" alt="Profile" class="profile-img">
            <span class="profile-name">user name</span>
        </div>
    </header>




    <!-- Sidebar container -->
    <div class="sidebar collapsed" id="sidebar">
        <!-- Logo and Title (Initially hidden until sidebar expands) -->
        <div class="logo-content">
            <div class="logo">
                <img src="/img/unknownperson.png" alt="Authorization Image" id="auth-img">
            </div>
            <div class="logo-name">user name</div>
        </div>

        <!-- Navigation links with icons -->
        <ul class="nav-links">
            <!-- Home -->
            <li>
                <a href="#">
                    <i class="fas fa-home"></i>
                    <span class="link-name">Home</span>
                </a>
            </li>

            <!-- User -->
            <li>
                <a href="/Employee/Index">
                    <i class="fas fa-user-graduate"></i>
                    <span class="link-name">User</span>
                </a>
            </li>

            <!-- Product -->
            <li>
                <a href="#">
                    <i class="fas fa-cube"></i>
                    <span class="link-name">Product</span>
                </a>
            </li>

            <!-- Supplier -->
            <li>
                <a href="#">
                    <i class="fas fa-truck"></i>
                    <span class="link-name">Supplier</span>
                </a>
            </li>

            <!-- Transaction -->
            <li>
                <a href="#">
                    <i class="fas fa-exchange-alt"></i>
                    <span class="link-name">Transaction</span>
                </a>
            </li>

            <!-- Category -->
            <li>
                <a href="#">
                    <i class="fas fa-th-list"></i>
                    <span class="link-name">Category</span>
                </a>
            </li>

            <!-- Alert -->
            <li>
                <a href="#">
                    <i class="fas fa-bell"></i>
                    <span class="link-name">Alert</span>
                </a>
            </li>
            

        </ul>

        <!-- Log out button at the bottom -->
        <div class="logout">
            <a href="#logout">
                <i class="fas fa-sign-out-alt"></i> <!-- Log out icon -->
                <span class="link-name">Log out</span>
            </a>
        </div>
    </div>


    <div class="content">
        <!-- Add your main content here -->
        @RenderBody()
    </div>

    <script>
        // Sidebar toggle script
        const toggleButton = document.getElementById('menu-toggle');
        const sidebar = document.getElementById('sidebar');
        const authImg = document.getElementById('auth-img');

        // Sidebar starts collapsed (showing only icons)
        sidebar.classList.add('collapsed');
        authImg.style.display = 'none'; // Hide the authorization image by default

        toggleButton.addEventListener('click', function() {
            sidebar.classList.toggle('collapsed');
            authImg.style.display = sidebar.classList.contains('collapsed') ? 'none' : 'block'; // Show/hide image
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
