<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management System</title>
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">




    <!-- Include the required Bootstrap CSS  for  notification center-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">



    <!-- Full version of jQuery for AJAX -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>




</head>
<body>

    <!-- Header -->
    <header class="header">
        <div class="logo-header">
            <i class="fas fa-bars" id="menu-toggle" style="font-size: 30px;"></i>
            <span class="logo-text" style="margin-left: 30px;">Trainee Management System</span>
        </div>
        <div class="profile">


            <!-- Add this in the appropriate place in your layout file -->
            <div id="notificationContainer">
                @await Html.PartialAsync("_NotificationCenterPartial", new List<StartAlert>())
            </div>



            <img src="~/images/1.png" alt="Profile" class="profile-img">
            <span class="profile-name">@User.Identity.Name</span>
        </div>
    </header>

    <!-- Sidebar container -->
    <div class="sidebar collapsed" id="sidebar">
        <!-- Logo and Title -->
        <div class="logo-content">
            <div class="logo">
                <img src="~/images/1.png" alt="Profile Image" id="auth-img" class="profile-img-sidebar">
            </div>
            <div class="logo-name" id="sidebar-name">@User.Identity.Name</div>
        </div>

        <!-- Navigation links with icons -->
         @if (User.Identity.IsAuthenticated)
 {
     <!-- Navigation links with icons -->
     <ul class="nav-links">
         <li>
             <a href="#">
                 <i class="fas fa-home"></i>
                 <span class="link-name">Home</span>
             </a>
         </li>
         <li>
             <a href="/Employee/Index">
                 <i class="fas fa-user-graduate"></i>
                 <span class="link-name">User</span>
             </a>
         </li>
     <li>
         <a href="/EmployeeSupplier/Index">
             <i class="fas fa-user-graduate"></i>
             <span class="link-name">Reciept</span>
         </a>
     </li>

         <li>
             <a href="/Product/Index">
                 <i class="fas fa-cube"></i>
                 <span class="link-name">Product</span>
             </a>
         </li>
         <li>
             <a href="/Supplier/Index">
                 <i class="fas fa-truck"></i>
                 <span class="link-name">Supplier</span>
             </a>
         </li>
         <li>
             <a href="/Transaction/Index">
                 <i class="fas fa-exchange-alt"></i>
                 <span class="link-name">Transaction</span>
             </a>
         </li>
         <li>
             <a href="/Category/Index">
                 <i class="fas fa-th-list"></i>
                 <span class="link-name">Category</span>
             </a>
         </li>
         <li>
             <a href="/Alert/Index">
                 <i class="fas fa-bell"></i>
                 <span class="link-name">Alert</span>
             </a>
         </li>
         @if (User.IsInRole("Admin"))
         {
             <li>
                 <a href="/Account/Register">
                     <i class="fa-solid fa-user-group"></i>
                     <span class="link-name">Add Member</span>
                 </a>
             </li>
             <li>
                 <a href="/Role/AddRole">
                     <i class="fa-regular fa-user"></i>
                     <span class="link-name">Add Role</span>
                 </a>
             </li>
         }
     </ul>
 }

        <!-- Log out button -->
        <div class="logout">
            <a href="/Account/SignOut">
                <i class="fas fa-sign-out-alt"></i>
                <span class="link-name">Log out</span>
            </a>
        </div>
    </div>

    <!-- Main content area -->
    <div class="main-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>








  




    <script>
        const toggleButton = document.getElementById('menu-toggle');
        const sidebar = document.getElementById('sidebar');
        const authImg = document.getElementById('auth-img');
        const sidebarName = document.getElementById('sidebar-name');

        sidebar.classList.add('collapsed');
        authImg.style.display = 'none';
        sidebarName.style.display = 'none';

        toggleButton.addEventListener('click', function () {
            sidebar.classList.toggle('collapsed');
            authImg.style.display = sidebar.classList.contains('collapsed') ? 'none' : 'block';
            sidebarName.style.display = sidebar.classList.contains('collapsed') ? 'none' : 'block';
        });





        $(document).ready(function () {
            // Load notifications when the page is loaded
            loadNotifications();

            // Load notifications when the notification dropdown is clicked
            $('#notificationDropdown').on('click', function () {
                loadNotifications();
            });
        });

        function loadNotifications() {
            $.ajax({
                url: '@Url.Action("GetPendingAlerts", "Alert")', // Adjust the controller name if different
                type: 'GET',
                success: function (data) {
                    $('#notificationContainer').html(data); // Update the container with the new notifications
                },
                error: function () {
                    alert('Error loading notifications.');
                }
            });
        }

       
      

    </script>

       





    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
