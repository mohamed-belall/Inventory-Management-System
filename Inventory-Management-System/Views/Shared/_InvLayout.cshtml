<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management System</title>
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <!-- Header -->
    <header class="header">
        <div class="logo-header">
            <i class="fas fa-bars" id="menu-toggle" style="font-size: 30px;"></i>
            <span class="logo-text" style="margin-left: 30px;">Trainee Management System</span>
        </div>
        <div class="profile">
            <img src="~/images/1.png" alt="Profile" class="profile-img">
            <span class="profile-name">user name</span>
        </div>
    </header>

    <!-- Sidebar container -->
    <div class="sidebar collapsed" id="sidebar">
        <!-- Logo and Title -->
        <div class="logo-content">
            <div class="logo">
                <img src="~/images/1.png" alt="Profile Image" id="auth-img" class="profile-img-sidebar">
            </div>
            <div class="logo-name" id="sidebar-name">user name</div>
        </div>

        <!-- Navigation links with icons -->
        <ul class="nav-links">
            <li>
                <a href="#">
                    <i class="fas fa-search"></i>
                    <span class="link-name">Search</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-home"></i>
                    <span class="link-name">Home</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-chart-line"></i>
                    <span class="link-name">Revenue</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-bell"></i>
                    <span class="link-name">Notifications</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-clock"></i>
                    <span class="link-name">Analytics</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-heart"></i>
                    <span class="link-name">Likes</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-wallet"></i>
                    <span class="link-name">Wallets</span>
                </a>
            </li>
        </ul>

        <!-- Log out button -->
        <div class="logout">
            <a href="#logout">
                <i class="fas fa-sign-out-alt"></i>
                <span class="link-name">Log out</span>
            </a>
        </div>
    </div>

    <!-- Main content area -->
    <div class="main-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <script>
        const toggleButton = document.getElementById('menu-toggle');
        const sidebar = document.getElementById('sidebar');
        const authImg = document.getElementById('auth-img');
        const sidebarName = document.getElementById('sidebar-name');

        sidebar.classList.add('collapsed');
        authImg.style.display = 'none';
        sidebarName.style.display = 'none';

        toggleButton.addEventListener('click', function () {
            sidebar.classList.toggle('collapsed');
            authImg.style.display = sidebar.classList.contains('collapsed') ? 'none' : 'block';
            sidebarName.style.display = sidebar.classList.contains('collapsed') ? 'none' : 'block';
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
