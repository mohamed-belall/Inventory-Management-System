<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Item</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            height: 100vh; /* Full height of the viewport */
            display: flex;
            justify-content: center; /* Horizontally center */
            align-items: center; /* Vertically center */
            margin: 0;
        }

        h4 {
            color: #3a3a3a;
            font-weight: bold;
        }

        .container {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px; /* You can set a maximum width */
            width: 100%;
        }

        .alert-success {
            background-color: #fcc6c6;
            color: #155724;
        }

        .card-header {
            background-color: #fafafa;
            font-weight: bold;
            color: #ff0000;
        }

        .btn-outline-primary {
            color: #6c63ff;
            border-color: #6c63ff;
        }

    </style>
</head>
<body>
    <div class="container">
        <!-- Feedback section for item deletion -->
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Employee deleted successfully!</h4>
            <p>The Employee you selected has been successfully deleted from the system.</p>
            <hr>
            <a href="/Employee/Index" class="btn btn-outline-primary">Return to Employees</a>
        </div>

        <!-- Optionally, add a table or details view showing the item that was deleted -->
        <div class="card mt-4">
            <div class="card-header">
                <h5>Deleted Employee Details</h5>
            </div>
            @foreach (var item in Model)
            {
                <div class="card-body">
                    <p><strong>ID:</strong> @item?.ID </p>
                    <p><strong>Name:</strong> @(item?.FName) @item?.LName</p>
                    <p><strong>Phone:</strong> @item?.Phone</p>
                    <p><strong>Email:</strong> @item?.Email</p>
                    <p><strong>Date Of Creation:</strong> @item?.CreatedDate</p>
                </div>
                <hr />
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
