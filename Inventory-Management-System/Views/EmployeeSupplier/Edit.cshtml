@model EmployeeSupplierWithSupplierList
@{
    SelectList SupOption = new SelectList(Model.Suppliers, "ID", "Name");
    SelectList ProductOption = new SelectList(Model.Products, "ID", "Name");
    SelectList EmpOption = new SelectList(Model.Employees, "ID", "FName");
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Employee</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: rgba(0, 0, 0, 0.6); /* Dark background with opacity */
            font-family: Arial, sans-serif;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-box {
            position: relative;
            background-color: #ffffff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 100%;
            min-width: 54vh;
            margin: auto;
            margin-top: 65px;
        }

        .form-box h3 {
            margin-bottom: 30px;
            font-weight: 600;
            text-align: center;
        }

        .form-label {
            font-weight: 500;
            color: #333;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ced4da;
        }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: 600;
            transition: background-color 0.3s;
            width: 100%;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        /* Style for the X (Cancel) button */
        .cancel-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: none;
            border: none;
            font-size: 30px;
            color: #6153fa;
            cursor: pointer;
            margin-right: 10px
        }

        .cancel-btn:hover {
            color: #dc3545;
        }
    </style>
</head>

<body>

    <div class="form-box">
        <!-- X (Cancel) Button -->
        <button type="button" class="cancel-btn" onclick="window.location.href='/EmployeeSupplier/Index'">&times;</button>

        <h3>Edit Receipt</h3>
        <form asp-action="SaveEdit" asp-controller="EmployeeSupplier" method="post">
            <!-- Supplier Dropdown -->
            <div class="mb-3">
                <input type="hidden" name="ID" value="@Model.Id" />
                <label asp-for="SupplierID">Supplier</label>
                <select asp-for="SupplierID" asp-items="SupOption" class="form-control">
                    <option value="">-- Select Supplier --</option>
                </select>
                <span asp-validation-for="SupplierID" class="text-danger"></span>
            </div>

            <!-- Product Dropdown -->
            <div class="mb-3">
                <label asp-for="ProductIdentifier">Product</label>
                <select class="form form-control" asp-for="ProductIdentifier" asp-items="ProductOption">
                    <option value="">--Select Product--</option>
                </select>
                <span asp-validation-for="ProductIdentifier" class="text-danger"></span>
            </div>

            <!-- Employee Dropdown -->
            <div class="mb-3">
                <label asp-for="EmployeeID">Employee</label>
                <select class="form form-control" asp-for="EmployeeID">
                    <option value="">--Select Employee--</option>
                    @foreach (var employee in Model.Employees)
                    {
                        <option value="@employee.ID">@employee.FName @employee.LName</option>
                    }
                </select>
                <span asp-validation-for="EmployeeID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TotalCost"></label>
                <input type="number" placeholder="100" class="form form-control" asp-for="TotalCost" />
            </div>
            <div class="mb-3">
                <label asp-for="Quantity"></label>
                <input type="number" placeholder="100" class="form form-control" asp-for="Quantity" />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Edit Receipt</button>
            </div>
        </form>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
